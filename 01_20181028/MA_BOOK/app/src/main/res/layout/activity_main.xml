<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:srcCompat="@drawable/ma_logo" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="베스트셀러 도서"
        android:gravity="center"
        android:textColor="@color/colorDarkBlack"

        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="5dp"
        android:background="@drawable/tree"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_best1"
                android:layout_width="110dp"
                android:layout_height="160dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/img_best2"
                android:layout_width="110dp"
                android:layout_height="160dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/img_best3"
                android:layout_width="110dp"
                android:layout_height="160dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_best4"
                android:layout_width="110dp"
                android:layout_height="160dp"
                android:paddingLeft="6dp"
                android:paddingTop="10dp"
                android:paddingRight="6dp"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/img_best5"
                android:layout_width="110dp"
                android:layout_height="160dp"
                android:padding="10dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/img_best6"
                android:layout_width="110dp"
                android:layout_height="160dp"
                android:padding="10dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_update_book"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="9dp"
                android:background="@drawable/mybook"
                android:onClick="onClick"
                android:padding="15dp"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="45dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="내 서재" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_search"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:layout_gravity="center"
                android:layout_margin="7dp"
                android:background="@drawable/searchbook"
                android:onClick="onClick"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.773"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="도서 검색" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_search_library"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="7dp"
                android:background="@drawable/library"
                android:onClick="onClick"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="도서관 검색" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_upload"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="7dp"
                android:background="@drawable/upload"
                android:onClick="onClick"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="공유" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_statistics"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_gravity="center"

                android:layout_margin="7dp"

                android:background="@drawable/analytics"
                android:onClick="onClick"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="통계" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_setting"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="7dp"
                android:background="@drawable/settings"
                android:onClick="onClick"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="설정" />
        </LinearLayout>



    </LinearLayout>


</LinearLayout>
